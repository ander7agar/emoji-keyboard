<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="hintText" format="reference|string"/>
    <attr name="textColor" format="reference|color"/>
    <attr name="textColorHint" format="reference|color"/>
    <attr name="audioTextColor" format="reference|color"/>
    <attr name="attachIconColor" format="reference|color"/>
    <attr name="audioIconColor" format="reference|color"/>
    <attr name="sendIconColor" format="reference|color"/>

    <declare-styleable name="Emoji">
        <attr name="emojiSize" format="dimension"/>
        <attr name="emojiAlignment" format="enum">
            <enum name="bottom" value="0"/>
            <enum name="baseline" value="1"/>
        </attr>
        <attr name="emojiTextStart" format="integer"/>
        <attr name="emojiTextLength" format="integer"/>
        <attr name="emojiUseSystemDefault" format="boolean"/>
    </declare-styleable>


    <declare-styleable name="TelegramPanelView">
        <attr name="hintText" />
        <attr name="textColor" />
        <attr name="textColorHint" />
        <attr name="audioTextColor" />
        <attr name="attachIconColor" />
        <attr name="audioIconColor" />
        <attr name="sendIconColor" />
    </declare-styleable>
</resources>